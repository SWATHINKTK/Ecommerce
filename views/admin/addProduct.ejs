<div class="col-12 grid-margin mt-5 addproductpage">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Add Product</h4>
      <div class="">
        <form class="form-sample">
          <p class="card-description">  </p>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <label class="col-sm-3 col-form-label">Product Name</label>
                <div class="col-sm-12">
                  <input type="text" class="form-control" name="product-name">
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label class="col-sm-3 col-form-label" onclick="hello()">Category</label>
                <div class="col-sm-12">
                  <div class="multiselect">
                    <div class="select-box form-control" id="select-box">
                        <div class="selected-options">Select options</div>
                        <div class="arrow">&#9660;</div>
                    </div>
                    <div class="options-container" id="options-container">
                        <% for(let i=0;i<data.length;i++){ %>
                        <div class="option">
                            <label><input type="checkbox" class="option-input" value="<%= data[i].categoryname %>"><%= data[i].categoryname %></label>
                        </div>
                        <% } %>
                    </div>
                </div>
            
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label class="col-sm-12 col-form-label">Description</label>
                <div class="col-sm-12">
                  <textarea class="form-control" id="exampleTextarea1" rows="4" name="description"></textarea>
                </div>
              </div>
            </div>
          </div>
           
          <div class="row">
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label">Brand Name</label>
                <div class="col-sm-12">
                  <input type="text" class="form-control" name="brandname">
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label">Stock</label>
                <div class="col-sm-12">
                  <input type="text" class="form-control" name="stock">
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label">Price</label>
                <div class="col-sm-12">
                  <input type="text" class="form-control" name="price">
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label">Size</label>
                <div class="col-sm-12">
                  <input type="text" class="form-control" name="size">
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label">Material</label>
                <div class="col-sm-12">
                  <input type="text" class="form-control" name="material">
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label">Color</label>
                <div class="col-sm-2 rounded-3">
                  <input type="color" class="form-control pt-2 pb-2 color-addproduct" id="productColor" value="#00ff37" title="Choose product color" name="color">
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label">Image</label>
                <div  class="ml-3 image-addproduct-div" >
                    <img class="image-addproduct" src="/public/admin/assets/images/screenshots/tinted-sidebar.jpg" alt="Reupload the file">
                </div>
                <div class="col-sm-12">
                  <input type="file" class="form-control" id="product-image-1" name="product-image-1" onchange="producImage(this)">
                </div>
                
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label"></label>

                <div class="ml-3 image-addproduct" >
                  <img class="image-addproduct" src="/public/admin/assets/images/screenshots/tinted-sidebar.jpg" alt="Reupload the file">
                </div>

                <div class="col-sm-12">
                  <input type="file" class="form-control" id="product-image-2" name="product-image-2" onchange="producImage(this)">
                </div>

              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label">Image</label>

                <div class="ml-3 image-addproduct">
                  <img class="image-addproduct" src="/public/admin/assets/images/screenshots/tinted-sidebar.jpg" alt="Reupload the file">
                </div>

                <div class="col-sm-12">
                  <input type="file" class="form-control" id="product-image-3" name="product-image-3" onchange="producImage(this)">
                </div>
                
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group ">
                <label class="col-sm-3 col-form-label"></label>

                <div class="ml-3 image-addproduct">
                  <img class="image-addproduct" src="/public/admin/assets/images/screenshots/tinted-sidebar.jpg" alt="Reupload the file">
                </div>

                <div class="col-sm-12">
                  <input type="file" class="form-control" id="product-image-4" name="product-image-4" onchange="producImage(this)">
                </div>

              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label class="col-sm-12 col-form-label">Specifications</label>
                <div class="col-sm-12">
                  <textarea class="form-control" id="exampleTextarea1" rows="4" name="Specifications" placeholder="*specifications seprated using commas"></textarea>
                </div>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary mr-3 ml-3">Submit</button>
          <button class="btn btn-dark">Cancel</button>
        </form>
      </div>
    </div>
    </div>
  </div>

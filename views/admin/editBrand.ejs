
<h1 class="card-title text-center text-dark">Edit Brand Data</h1>
   <div class="col-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body form-style">
          <!-- <p class="card-description" id="categorysuccess"></p> -->
          <form class="forms-sample mb-3" id="editBrandForm" method="POST">
            <div class="form-group">
              <label for="exampleInputName1">Brand Name</label>
              <input type="text" class="form-control" id="editbrandname" placeholder="Brand Name" name="brandName" value="<%= data.brand_name %>">
              <p class="text-danger ml-2" id="validate-editbrand"></p>
              <input type="hidden" name="brandId" value="<%= data._id %>">
              <input type="hidden" name="oldBrandName" value="<%= data.brand_name %>">
              <input type="hidden" name="brandImage" value="<%= data.brand_logo %>">
            </div> 
            <div class="form-group ">
              <label class="col-sm-3 col-form-label">Image</label>
              <input type="file" class="form-control" id="editBrandImage" name="editBrandImage" accept="image/*">
              <p class="text-danger ml-2" name="validate-brand"></p>
              <div  class="ml-3">
                <img  id="edit-brand-img-view" src="/public/admin/assets/brandImages/<%= data.brand_logo %>" data-edit-brand-image="<%= data.brand_logo %>" alt="brand Image File"><br>
                <button type="click" class="mt-2 bg-transparent addBrandCropBtn ml-auto" id="editBrandCropModalView"><i class="mdi mdi-crop"></i> Crop</button>
              </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2" id="brandsubmit">Submit</button>
            <a class="btn btn-dark" href="/admin/viewbrand">Cancel</a> 
          </form>
          <div class="" role="alert" id="edit-brand-submit-result">
          </div>
        </div>
      </div>
    </div>    
    
    <div class="modal w-100" id="editBrandCropModal">
      <div class="modal-dialog modal-dialog-centered w-100">
        <div class="modal-content bg-white" style="height: 400px;">
            <button type="button" class="close bg-white" onclick="editBrandImageCropClose()"><span aria-hidden="true">&times;</span></button>
            <div class="d-flex justify-content-center m-2 ">
              <button type="button" class="btn mt-2 text-dark addBrandCropBtn " id="editCropResult" style=" box-shadow: 0 3px 10px rgb(0, 0, 0,0.5); border: 1px dashed #000; border-radius: 4px;"><i class="mdi mdi-crop"></i> Crop</button>
            </div>
            <img id="editCroppingImageView" src="" alt="" style="height:auto; object-fit: cover;">

          </div>
        </div>
      </div>
    </div>


<%- include('../partials/header.ejs') %>
<h1 class="card-title text-center text-dark">Edit Offer Data</h1>
<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body form-style d-flex justify-content-center ">
      <form class="forms-sample mt-3 mb-3 w-50" id="editOfferForm" method="POST">
        <div class="" role="alert" id="edit-offer-submit-result">
        </div>
        <div class="form-group">
          <label for="exampleInputName1">Offer Name</label>
          <input type="text" class="form-control" id="offerName" placeholder="offer name" name="offerName" value="<%= editOfferData[0].offerName %>">
          <input type="hidden" id="editFormDataId" value="<%= editOfferData[0]._id %>">
          <p class="text-danger ml-2" name="validate-offer"></p>
        </div>
        <div class="form-group">
          <label for="exampleInputName1">Offer Percentage</label>
          <input type="number" class="form-control" id="OfferPercentage" placeholder="offer percentage" name="OfferPercentage" min="1" max="99" value="<%= editOfferData[0].OfferPercentage %>">
          <p class="text-danger ml-2" name="validate-offer"></p>
        </div>
        <div class="form-group">
          <label for="exampleInputName1">Start Date</label>
          <input type="date" class="form-control" id="startDate" placeholder="offer start date" name="StartDate" value="<%= startDate %>">
          <p class="text-danger ml-2" name="validate-offer"></p>
        </div>
        <div class="form-group">
          <label for="exampleInputName1">End Date</label>
          <input type="date" class="form-control" id="endDate" placeholder="offer end date" name="EndDate" value="<%= endDate %>">
          <p class="text-danger ml-2" name="validate-offer"></p>
        </div>
        
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button type="submit" class="btn btn-dark mr-2">Cancel</button>
      </form>
    </div>

    
  </div>
  </div>
</div>   

<%- include('../partials/footer.ejs') %>

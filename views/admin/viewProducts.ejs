<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body  mt-5">
        <h4 class="card-title text-center">Product View&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</h4>
        <!-- <p class="card-description"> Add class <code>.table-hover</code> -->
        </p>
        <div class="table-responsive" id="table-product">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Color</th>
                <th>Brand Name</th>
                <th>Stock</th>
                <th>Price</th>
                <th>View More</th>
                <th>Action</th>
                <th>Edit</th>
              </tr>
            </thead>
            <tbody class="text-white">
              <% if(data.length) { %>
                <% for(let i = 0; i < data.length ; i++) { %>
              <tr>
                <td><%= i+1 %></td>
                <td id="productTable-productname"><%= data[i].productName %></td>
                <td >
                    <% for(let j = 0; j < data[i].categorys.length ; j++) { %>
                    <%= data[i].categorys[j] %><br>
                    <% } %>
                </td>
                <td><%= data[i].brandname %></td>
                <td><%= data[i].stock %></td>
                <td>	&#8377; <%= data[i].price %></td>
                <div id="product-viewmore"><td><a href="#" class="product-viewmore" data-viewmore-id="<%= data[i]._id %>">View More <i class="bi bi-chevron-double-right"></i></a></td></div>
                <% if(data[i].status) {%>
                  <td id="<%= data[i]._id %>"><button class="btn  btn-outline-danger pl-4 pr-4 l-u-button" name="l-u-button" data-button-id="<%= data[i]._id %>">List</button></td>
                <% } else { %>
                  <td id="<%= data[i]._id %>"><button class="btn btn-outline-success pl-3 pr-3 l-u-button" name="l-u-button" data-button-id="<%= data[i]._id %>">UnList</button></td>
                <% } %>
                <td ><button class="btn btn-transparent product-edit-button" data-edit-id="<%= data[i]._id %>"><i class="bi bi-pencil-square"></i>Edit</button></td>
               
              </tr>
              <% } } else { %>
                <tr class="bg-danger">
                  <th class="text-dark text-center" colspan="7">PRODUCT IS NOT FOUND</th>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>



<div class="modal productmoreinfo-modal" id="modal-total-div">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">More Information</h5>
          <button class="btn btn-transparent" id="product-cancel"><i class="bi bi-x cancel"></i></button>
      </div>
      <div class="modal-body" id="product-modal-content">
        
      </div>
      </div>
    </div>
  </div>
</div>

<div class="modal confirmation-modal" id="product-confirmation-modal" style="display: none; width: 23rem;margin-right: 50%;margin-left: 40%; margin-top:3rem;">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="staticBackdropLabel">User Block/Unblock</h5>
      <button class="btn btn-transparent" id="list-confirmation-cancel1"><i class="bi bi-x cancel"></i></button>
    </div>
    <div class="modal-body">
      Are you sure?
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" id="list-confirmation-cancel2">Cancel</button>
      <button type="button" class="btn btn-primary" id="list-confirmation-sucess" data-product-id="">OK</button>
    </div>
  </div>
</div>
</div>
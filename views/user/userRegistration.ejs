<%- include('../partials/header.ejs') %>
<section class="my-login-page">
	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-md-center h-100">
				<div class="card-wrapper">
					<div class="brand">
						<img src="/public/user/img/logo.png" alt="bootstrap 4 login page">
					</div>
					<div class="card fat">
						<div class="card-body">
							<h4 class="card-title text-center">Register</h4>
                            <h6 class="text-danger text-center" id="verification-Result"><%= locals.data ? data  : '' %></h6>
                            <form id="signupForm" method="POST" action="/signup" onsubmit="return validateRegister()" novalidate>

                                <input type="hidden" name="refer" id="" value="<%= locals.referalId ? referalId : '' %>">

								<div class="form-group mb-3">
									<label for="name">Name</label>
									<input id="Username"  type="text" class="form-control" placeholder="Username" name="username">
                                    <span class="text-danger ml-2 validate" style="font-size: 13px;" name="validate-signup"></span>
								</div>

								<div class="form-group mb-3">
									<label for="email">E-Mail</label>
									<input id="email" type="email" class="form-control" placeholder="Email" name="email">
                                    <span class="text-danger ml-2 validate" style="font-size: 13px;" name="validate-signup"></span>
								</div>

								<div class="form-group mb-3">
									<label for="password">Phone Number</label>
									<input id="phonenumber" type="text" placeholder="Phone number" class="form-control" name="phonenumber">
                                    <span class="text-danger ml-2 validate" style="font-size: 13px;" name="validate-signup"></span>
								</div>

                                <div class="form-group mb-3">
									<label for="password">Password</label>
									<input id="password" type="password" placeholder="Password" class="form-control" name="password">
                                    <span class="text-danger ml-2 validate" style="font-size: 13px;" name="validate-signup"></span>
								</div>

                                <div class="form-group mb-3">
									<label for="password">Confirm Password</label>
									<input id="confirmPassword" type="password" placeholder="Confirm password" class="form-control" name="confirmPassword">
                                    <span class="text-danger ml-2 validate" style="font-size: 13px;" name="validate-signup"></span>
								</div>

								<div class="form-group m-0">
									<button type="submit" class="btn btn-primary btn-block" id="signupBtn">
										Register
									</button>
								</div>
								<div class="mt-4 text-center">
									Already have an account? <a href="/login">Login</a>
								</div>
							</form>
						</div>
					</div>
					<div class="footer">
						Copyright &copy; 2017 &mdash; MaleFashion 
					</div>
				</div>
			</div>
		</div>
	</section>
</section>
<%- include('../partials/footer.ejs') %>

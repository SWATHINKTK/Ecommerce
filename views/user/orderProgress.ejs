<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Order Progress</h4>
                    <div class="breadcrumb__links">
                        <!-- <a href="/home">Home</a>
                        <span>Shop</span> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container-fluid p-4">
        <div class="row">
          <div class="col-md-1"></div>
            <div class="col-md-2 p-4 pr-5 Profile-sidebar" >
                <!-- Left Side Div -->
                <div class="left-side">
                    <div>
                        <i class="bi bi-person-circle fa-2x"></i><span class="ml-2 font-weight-bold text-muted">My Profile</span>
                        <h3 class="mt-2 text-center font-weight-bold"><%= locals.username %></h3>
                    </div>
                        <a href="/userprofile">
                            <div class="mt-4 options-userprofle">
                                <i class="bi bi-person-fill fa-lg"></i> <span> Personal Information</span> 
                            </div>
                        </a>
                        <a href="/viewWallet"> 
                          <div class="mt-2 options-userprofle">
                              <i class="fa-solid fa-wallet"></i> <span> Wallet </span>
                          </div>
                      </a>
                        <a href="/addressinformation">
                            <div class="mt-2 options-userprofle">
                              <i class="fa-regular fa-address-card"></i> <span> Address</span> 
                            </div>
                        </a>
                        <a href="/api/viewOrder">
                            <div class="mt-2 options-userprofle">
                                <i class="bi bi-box-seam-fill"></i> <span> Orders</span> 
                            </div>
                        </a>
                        <a href="/api/viewWishlist"> 
                          <div class="mt-2 options-userprofle">
                              <i class="fa-regular fa-heart"></i> <span> Wishlist</span> 
                              <span class="text-dark font-weight-bold"> ( <%= locals.wishlistCount %> )</span>
                          </div>
                        </a>
                </div>
            </div>
            <div class="col-md-8 ml-4">
                <!-- Right Side Div -->
                <!-- <div class="right-side p-4 order-right-side"> -->
                    <!-- <h2 class="text-center font-weight-bold mb-4">Orders</h2> -->

                    <!-- Order Progress view Div -->
                    <section class="">
                        <!-- <section class="vh-100 gradient-custom-2"> -->
                        <div class="container">
                            <!-- <div class="container py-5 h-100"> -->
                          <div class="row d-flex justify-content-center align-items-center h-100" data-order-status="<%= orderData[0].productInforamtion.orderStatus %>" id="order-Progress-ViewPage" data-order-Place="<%= orderData[0].createdAt %>">
                            <div class="col-md-12 col-lg-12 col-xl-12">
                              <div class="card card-stepper" style="border-radius: 16px;">
                                <div class="card-header p-4">
                                  <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                      <p class="text-muted mb-2"> Order ID <span class="fw-bold text-body"> <%= orderData[0].order_id %></span></p>
                                      <p class="text-muted mb-0"> Place On <span class="fw-bold text-body"> <%= orderData[0].createdAt.toLocaleDateString() %></span> </p>
                                    </div>
                                    <div>
                                      <h6 class="mb-0"> <a href="/api/invoiceDownload?orderId=<%= orderData[0]._id %>">Download Invoice</a> </h6>
                                    </div>
                                  </div>
                                </div>
                                <div class="card-body p-4">
                                    <div class="d-flex flex-row mb-4 pb-2">
                                        <div class="flex-fill">
                                          <a href="/productdetails?id=<%= orderData[0].productData[0]._id %>">
                                            <h5 class="bold font-weight-bold"><%= orderData[0].productData[0].productName %></h5>
                                          </a>
                                          <p class="text-muted mt-2"> Qty: <%= orderData[0].productInforamtion.productquantity %> item</p>
                                          <h4 class="mb-3 mt-3 font-weight-bold"> <i class="bi bi-currency-rupee"></i> <%= orderData[0].productInforamtion.productPrice %>  <span class="small text-muted"> (<%= orderData[0].productInforamtion.paymentStatus %>) </span></h4>
                                          <p class="text-muted mt-2"> Payment Method: <span class="font-weight-bold text-body"><%= orderData[0].paymentMethod %></span></p>
                                          <p class="text-muted mt-2">Tracking Status on: <span class="text-body">
                                            <%= new Intl.DateTimeFormat('en-US', {
                                                    hour: 'numeric',
                                                    minute: 'numeric',
                                                    second: 'numeric'
                                                }).format(new Date()); %>, Today</span></p>

                                          <div class="d-flex mt-4">
                                            <div>
                                              <h6 class=" font-weight-bold">Shipping Address : </h6>
                                            </div>
                                            <div class="pl-3">
                                              <p class="font-weight-bold mt-0"><%= orderData[0].addressInformation.username %><span class="pl-4"><%= orderData[0].addressInformation.phonenumber %></span></p>
                                              <p class="m-0"><%= orderData[0].addressInformation.address %> , <%= orderData[0].addressInformation.locality %> , <%= orderData[0].addressInformation.city %> , <%= orderData[0].addressInformation.district %></p>
                                              <p class="m-0"><%= orderData[0].addressInformation.pincode %></p>
                                              <p class="m-0"><%= orderData[0].addressInformation.alternateNumber %></p>
                                            </div>
                                          </div>
                                        </div>
                                        <div>
                                          <a href="/productdetails?id=<%= orderData[0].productData[0]._id %>">
                                            <img class="align-self-center img-fluid"
                                              src="/public/admin/assets/productImages/<%= orderData[0].productData[0].productImages[0] %>" width="250">
                                          </a>
                                        </div>
                                    </div>

                                    <!-- **** LOAD TIME EVENT WORKING ON PROGRESS BAR  IN JS order>js*** -->
                                    <div id="progress-div">
                                        <div class="col-md-11 d-flex">
                                            <div class="col-md-6 d-flex align-items-center">
                                              <span class="progress-number">1</span>
                                              <div class="progress" role="progressbar" aria-label="Default striped example" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 95%;height: 4px;">
                                                <div class="progress-bar progress-bar-striped bg-success" name="progress-order" style="width: 0%; transition: width 2s ease-in-out;"></div>
                                              </div>
                                            </div>
                                          <div>
                                            <span class="progress-number">2</span>
                                          </div>
                                          <div class="col-md-6 d-flex align-items-center">
                                              <div class="progress" role="progressbar" aria-label="Success striped example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 95%;height: 4px;">
                                                <div class="progress-bar progress-bar-striped bg-success" name="progress-order" style="width: 0%; transition: width 2s ease-in-out;"></div>
                                              </div>
                                              <span class="progress-number p-2">3</span>
                                          </div>
                                        </div>
                                        <div class="col-md-12 d-flex justify-content-between">
                                            <span class="text-progressbar ml-2">Placed</span>
                                            
                                            <span class="text-progressbar">Shipped</span>
                                            
                                            <span class="text-progressbar mr-4">Delivered</span>
                                          
                                        </div>
                                    </div>


                                    <div id="progress-div-canceled">
                                        <div class="col-md-11 d-flex">
                                            <div class="col-md-12 d-flex align-items-center">
                                              <span class="progress-number mr-2">1</span>
                                              <div class="progress" role="progressbar" aria-label="Default striped example" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100" style="width: 95%;height: 4px;">
                                                <div class="progress-bar progress-bar-striped bg-secondary" name="progress-order" style="width: 0%; transition: width 2s ease-in-out;"></div>
                                              </div>
                                            </div>
                                            <div>
                                              <span class="progress-number">2</span>
                                            </div>
                                        </div>
                                        <div class="col-md-12 d-flex justify-content-between">
                                            <span class="text-progressbar ml-2" id="progressFirst-text">Placed</span>   
                                            <span class="text-progressbar mr-4" id="progressEnd-text">Canceled</span>
                                          
                                        </div>
                                    </div>

                                    
                                </div>
                                
                                 <!-- **** LOAD TIME EVENT WORKING ON PROGRESS BAR  IN JS order>js*** -->
                                <% if(orderData[0].productInforamtion.orderStatus == "Canceled"){ %>
                                <% } else if( orderData[0].productInforamtion.orderStatus == 'Delivered'&& returnPolicyDate > new Date()) { %>
                                  <div class="card-footer p-4" id="order-progress-footer">
                                    <div class="d-flex justify-content-between">
                                      <h5 class="fw-normal mb-0"><a href="#" data-toggle="modal" data-target="#exampleModal">Return Order</a></h5>
                                    </div>
                                  </div>
                                <% } else if(orderData[0].productInforamtion.orderStatus == 'Placed' || orderData[0].productInforamtion.orderStatus == 'Shipped') { %>
                                  <div class="card-footer p-4" id="order-progress-footer">
                                    <div class="d-flex justify-content-between">
                                      <h5 class="fw-normal mb-0"><a href="#" id="orderCancel" data-product-qunatity="<%= orderData[0].productInforamtion.productquantity %>" data-order-id="<%= orderData[0]._id %>" data-product-id="<%= orderData[0].productData[0]._id %>">Cancel Order</a></h5>
                                    </div>
                                  </div>
                                <% } %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </section>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content " style="border: none; border-radius: 9px;">
      <div class="modal-header" style="border: none;">
        <h5 class="modal-title text-center w-100 font-weight-bold text-danger" id="exampleModalLabel" style="font-size:25px;">Return Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body pb-0 mb-0">
        <form>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Reason for Return:</label>
            <textarea class="form-control" id="message-text-returnOrder"></textarea>
            <p class="ml-2 text-danger" id="returnReason-Validate"></p>
          </div>
        </form>
      </div>
      <div class="modal-footer d-flex flex-column mt-0 pt-0" style="border: none;">
        <button type="button" id="orderReturn" class="btn btn-primary w-100 rounded-pill" style="background-color: #eb4e4e; border: none;" data-order-id="<%= orderData[0]._id %>" data-product-id="<%= orderData[0].productData[0]._id %>" >Send Reason</button>
        <button type="button" class="btn btn-secondary w-100 rounded-pill" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer.ejs') %>
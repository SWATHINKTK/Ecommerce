<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<div class="success-animation mb-4 mt-4 p-3">
    <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"><circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" /><path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" /></svg>
    <div class="d-flex justify-content-center mt-4">
        <h4 class="text-center font-weight-bold">Order Placed Sucessfully !...</h4>
    </div>
</div>
<section class="p-2">
    <div class="container mb-5 order-sucessfull-main-div W-50 p-4">
        <div class="row">
            <div class="col-md-6 order-left-side">
                <!-- Left Side Div -->
                <div class="ordersuccess-left">
                    <h5>PRODUCT INFORMATION</h5>
                    <% for(let i=0 ; i< order.productInforamtion.length ; i++) {%>
                        <div class="mt-4 order-success-product-image mb-4 ">
                            <img src="/public/admin/assets/productImages/<%= order.productInforamtion[i].productId.productImages[i] %>" alt="">
                        </div>
                        <ul type="none" class="mt-3">
                            <li class="mt-1"><span class="pr-2 font-weight-bold">Product Name</span> : <%= order.productInforamtion[i].productId.productName %></li>
                            <li class="mt-1"><span class="pr-2 font-weight-bold">Size</span> : <%= order.productInforamtion[0].productId.size %></li>
                            <li class="mt-1">
                                <div class="d-flex align-items-center">
                                    <span class="pr-2 font-weight-bold">Color</span>: 
                                    <input type="color" value="<%= order.productInforamtion[i].productId.color %>" class="cart-color">
                                </div>
                            </li>
                            <li class="mt-1"><span class="pr-2 font-weight-bold">Quanitity</span> : <%= order.productInforamtion[i].productquantity %></li>
                            <li class="mt-1"><span class="pr-2 font-weight-bold">Price</span> : <i class="bi bi-currency-rupee text-primary font-weight-bold"></i> <span class="text-primary font-weight-bold"> <%= order.productInforamtion[i].productPrice %> </span></li>
                        </ul>
                    <% } %>
                </div>
                        
            </div>
            <div class="col-md-6">
                <div class="right-side ordersuccess-right">
                    <h5>ORDER DETAILS</h5>
                    <ul type="none" class="mt-4">
                        <li class="mt-1"><span class="pr-2 font-weight-bold">Order Id</span> : <%= order.order_id %></li>
                        <li class="mt-1"><span class="pr-2 font-weight-bold">Order Date</span> : <%= order.createdAt.toLocaleDateString() %></li>
                        <li class="mt-1"><span class="pr-2 font-weight-bold">Delivery Date</span> : 03/11/2023</li>
                        <li class="mt-4"><span class="pr-2 font-weight-bold"><%= order.addressInformation.username %>&nbsp;&nbsp; <%= order.addressInformation.phonenumber %></span></li>
                        <li class="mt-1">
                            <!-- <span class="pr-2 font-weight-bold">Delivery Address</span> :  -->
                            <%= order.addressInformation.address %> , <%= order.addressInformation.address %>
                            <%= order.addressInformation.locality %> , <%= order.addressInformation.city %>
                            <%= order.addressInformation.district %> , <%= order.addressInformation.pincode %>
                        </li>
                        <li class="mt-3"><span class="pr-2 font-weight-bold">Payment Method</span> : <%= order.paymentMethod %></li>
                        <li class="mt-1"><span class="pr-2 font-weight-bold">Total Price</span> : <i class="bi bi-currency-rupee text-primary font-weight-bold"></i> <span class="font-weight-bold text-primary"><%= order.totalAmount %></span></li>
                    </ul>
                    <div class="d-flex justify-content-center align-items-center mt-4">
                        <a href="/api/viewOrder" class="mr-4">
                            <button class="gotoOrderButton">
                               Go To Order
                                <div class="arrow">â€º</div>
                            </button>
                        </a>
                        <a href="/api/invoiceDownload?orderId=<%= order._id %>" class="mt-3 mb-3" target="_blank">
                            <div class="button" data-tooltip="Download">
                                <div class="button-wrapper">
                                  <div class="text"><i class="bi bi-file-earmark-text-fill"></i> <span class="ml-2">Invoice</span></div>
                                    <span class="icon">
                                      <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="2em" height="2em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15V3m0 12l-4-4m4 4l4-4M2 17l.621 2.485A2 2 0 0 0 4.561 21h14.878a2 2 0 0 0 1.94-1.515L22 17"></path></svg>
                                    </span>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="d-flex justify-content-center mt-2">
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>


<%- include('../partials/footer.ejs') %>
<%- include('../partials/header.ejs') %>
    <%- include('../partials/navbar.ejs') %>

    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>User Profile</h4>
                        <div class="breadcrumb__links">
                            <!-- <a href="/home">Home</a>
                            <span>Shop</span> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
   
    <section>
        <div class="container-fluid p-4">
            <div class="row">
            <div class="col-md-1"></div>
                <div class="col-md-2 p-4 pr-5 Profile-sidebar">
                    <!-- Left Side Div -->
                    <div class="left-side">
                        <div>
                            <i class="bi bi-person-circle fa-2x"></i><span class="ml-2 font-weight-bold text-muted">My Profile</span>
                            <h3 class="mt-2 text-center font-weight-bold"><%= locals.username %></h3>
                        </div>
                        <a href="/userprofile">
                            <div class="mt-4 options-userprofle">
                                <i class="bi bi-person-fill fa-lg"></i> <span> Personal Information</span> 
                            </div>
                        </a>
                        <a href="/addressinformation">
                            <div class="mt-2 options-userprofle">
                                <i class="fa-regular fa-address-card"></i> <span> Address</span> 
                            </div>
                        </a>
                        <a href="/api/viewOrder">
                            <div class="mt-2 options-userprofle">
                                <i class="bi bi-box-seam-fill"></i> <span> Orders</span> 
                            </div>
                        </a>
                        <a href="/api/viewWishlist"> 
                            <div class="mt-2 options-userprofle">
                                <i class="fa-regular fa-heart"></i> <span> Wishlist</span> 
                                <span class="text-dark font-weight-bold"> ( <%= locals.wishlistCount %> )</span>
                            </div>
                        </a>
                        <a href="/viewWallet"> 
                            <div class="mt-2 options-userprofle">
                                <i class="fa-solid fa-wallet"></i> <span> Wallet </span>
                            </div>
                        </a>
                        
                    </div>
                </div>
                <div class="col-md-8 ">
                    <!-- Right Side Div -->
                    <div class="right-side p-5 order-right-side ">
                        <h2 class="text-center font-weight-bold"> Wallet </h2>

                        <div class="alert alert-danger mt-2 font-weight-bold text-center" role="alert" id="walletPaymentFailed" style="display: none;">
                          </div>

                        <div class="wallet-card-mainDiv">
                            <div class="card wallet-card mt-5">
                                <div class="card-body">
                                    <div class="d-flex">
                                        <h5 class="card-title">Wallet </h5>
                                        <i class="fa-solid fa-wallet ml-auto"></i>      
                                    </div>
                                    <!-- <h6 class="card-subtitle mb-2 text-muted"><%= locals.username %></h6> -->
                                    <div class="d-flex align-items-end">
                                        <h3 class="mt-3"><i class="bi bi-currency-rupee"></i> <%= dataWallet[0].walletAmount %></h3>
                                        <button class="ml-auto btn btn-warning font-weight-bold btn-sm" id="AddAmount-DivBtn">Add Amount</button>
                                    </div>
                                </div>
                            </div>
                            <div class="card wallet-card mt-3 mb-5" id="AddAmountWallet-Div" style="display: none;">
                                <div class="card-body">
                                    <div class="d-flex">
                                        <h5 class="card-title">Add Amount To Wallet</h5>
                                        <!-- <i class="fa-solid fa-wallet ml-auto"></i>       -->
                                    </div>
                                    <!-- <h6 class="card-subtitle mb-2 text-muted"><%= locals.username %></h6> -->
                                    <p class="mt-3 mb-0 font-weight-bold text-muted">Enter Amount</p>
                                    <input type="number"  min="1" max="15000" value="" id="walletAmountEnter"><br>
                                    <span class="text-danger ml-2 my-0" id="walletValidate"></span><br>
                                    <button class=" btn btn-warning font-weight-bold btn-sm" id="walletAmountAddBtn">Add Amount</button>
                                </div>
                            </div>
                            <h4 class="font-weight-bold mt-5">Wallet Transactions</h4>
                            <div class="mt-3">
                                <table class="table table-hover table-responsive">
                                    <thead>
                                      <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Id</th>
                                        <th scope="col">Date</th>
                                  
                                        <th scope="col">Description</th>
                                        <th scope="col">Type</th>
                                        <th scope="col">Amount</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <% for(let i=0; i < dataWallet[0].walletTransaction.length ; i++) { %>
                                            <tr>
                                                <th><%= i+1 %></th>
                                                <td><%= dataWallet[0].walletTransaction[i].transactionId %></td>
                                                <td><%= (dataWallet[0].walletTransaction[i].Date) %></td>
                                                
                                                <td><%= dataWallet[0].walletTransaction[i].description %></td>
                                                <% if(dataWallet[0].walletTransaction[i].transactionType == 'Debit'){ %>
                                                    <td class="text-success"><%= dataWallet[0].walletTransaction[i].transactionType %></td>
                                                <% } else {%>
                                                    <td class="text-danger"><%= dataWallet[0].walletTransaction[i].transactionType %></td>
                                                <% } %>
                                                <td><%= dataWallet[0].walletTransaction[i].amount %></td>
                                            </tr>
                                        <% } %> 
                                      
                                    </tbody>
                                  </table>
                            </div>
                            
                        </div>

                        
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    
<%- include('../partials/footer.ejs') %></div>
<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Shop</h4>
                    <div class="breadcrumb__links">
                        <a href="/home">Home</a>
                        <span>Shop</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <!-- Left Side Div -->
                <div class="left-side">
                    <div>
                        <i class="bi bi-person-circle fa-2x"></i><span class="ml-2 font-weight-bold text-muted">My Profile</span>
                      
                    </div>
                        <a href="/userprofile">
                            <div class="mt-4 options-userprofle">
                                <i class="bi bi-person-fill fa-lg"></i> <span> Personal Information</span> 
                            </div>
                        </a>
                        <a href="/addressinformation">
                            <div class="mt-2 options-userprofle">
                                <i class="bi bi-box-seam-fill"></i> <span> Address</span> 
                            </div>
                        </a>
                        <a href="#">
                            <div class="mt-2 options-userprofle">
                                <i class="bi bi-box-seam-fill"></i> <span> Orders</span> 
                            </div>
                        </a>
                </div>
            </div>
            <div class="col-md-9">
                <!-- Right Side Div -->
                <div class="right-side p-5">
                    <h2 class="text-center font-weight-bold mb-4">Address Information</h2>
                    <a href="/addnewaddress">
                        <div class="col-sm-12  p-3 mb-5 border d-flex align-items-center">
                            <i class="fa-solid fa-plus fa-lg mr-3" style="color: #000000;"></i> <h5 class="font-weight-bold">Add New Address</h5>
                        </div>
                    </a>
                   <% if(locals.address ? true : false){ %>
                     <% for(let i=0; i < address.length ;i++){ %>
                        <div class="card col-sm-12 mt-2 address-card" id="<%= address[i]._id %>"">
                            <div class="card-body p-3">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <p class="card-text font-weight-bold address-name"><%= address[i].username %><span class="ml-2"> <%= address[i].phoneNumber %> </span></p>
                                        <p class="card-text"><%= address[i].address %></p>
                                        <p class="card-text"><%= address[i].locality %> , <%= address[i].city %> , <%= address[i].district %></p>
                                        <p class="card-text font-weight-bold"><%= address[i].pincode %></p>

                                        <a href="/editaddress<%= address[i]._id %>" class="text-primary"><i class="bi bi-pencil-square"></i> Edit</a>&nbsp;&nbsp; | &nbsp;&nbsp;
                                        <a href="#" data-addressId="<%= address[i]._id %>" class="text-danger" onclick="deleteAddress(this)"><i class="bi bi-trash"></i> Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <% } else {%>

                        <div class="card col-sm-12 mt-2 address-card">
                            <div class="card-body p-3">
                                <div class="row">
                                    <div class="col-sm-12 text-center">
                                       <span style="font-size: 35px;">&#128577;</span><h2 class="text-danger address-notfound">Address is Not Found</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                    <% } %>

                    


                    

                </div>
            </div>
        </div>
    </div>
    <!--Section: Live preview-->

  <!--Modal: modalCoupon-->
    <div class="modal top" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="true" style="display: none;">
      <div class="modal-dialog modal-frame modal-top modal-notify modal-success" role="document">
        <!--Content-->
        <div class="modal-content">
          <!--Body-->
          <div class="modal-body">
            <div class="row d-flex justify-content-center align-items-center">
  
              <h2>
                <span class="badge">Delete Confirmation</span>
              </h2>
              <p class="pt-3 mx-4"><strong> Are you sure you want to delete this item?</strong> .</p>
              <div>

              <button type="button" class="btn btn-danger ml-3" id="deleteModalOk" data-address-id="" onclick="deleteAddressSucess(this)">
                <i class="bi bi-trash"></i> Delete
              </button>

              <button type="button" class="btn btn-outline-danger waves-effect ml-4" onclick="removeModal()">Cancel</button>
            </div>
            </div>
          </div>
        </div>
        <!--/.Content-->
      </div>
    </div>
</section>


<%- include('../partials/footer.ejs') %>
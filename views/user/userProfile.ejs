<%- include('../partials/header.ejs') %>
    <%- include('../partials/navbar.ejs') %>

    <div class="product__details__breadcrumb pt-4" style="background-color: #F3F2ED;">
        <a href="/home" class="ml-5">Home</a>
        <span>userprofile</span>
    </div>

    <div class="container-fluid user-profile">
        <div class="user-profile-sidebar">
            <div class="user-profile-content">
                <h5 class="text-muted font-weight-bold mr-3 mb-3 mt-3 ml-0">My Profile</h5>
                <div class="user-info">
                    <div class="user-Img mr-2">
                        <i class="bi bi-person-circle fa-2x"></i>
                    </div>
                    <div class="user-name-profile ">
                        <% if (dataUser && dataUser.username) { %>
                            <h5><%= dataUser.username %></h5>
                        <% } else { %>
                            <p>User data not available</p>
                        <% } %>
                    </div>
                </div>
                <a href="#">
                    <div class="mt-4">
                        <i class="bi bi-person-fill fa-lg"></i> <span> Personl Information</span> 
                    </div>
                </a>
                <a href="">
                    <div class="mt-3">
                        <i class="bi bi-box-seam-fill"></i> <span> Orders</span> 
                    </div>
                </a>
                
            </div>
        </div>
        <div class="user-profile-main-content">
            <h2 class="text-center">Personl Information</h2>
            <div class="personl-information">
                <form>
                    <div class="form-group user-details">
                        <div class="input-group">
                            <label>User Name</label> 
                            <a href="#" class="ml-3 fs-6" id="username-edit" onclick="changeUsername()">Edit</a>
                            <a href="/userprofile" class="ml-3" id="username-cancel" style="display: none;">Cancel</a>
                        </div>
                        <div class="input-group">
                            <input type="text" id="username-input" value="<%= dataUser.username %>" class="col-3"  disabled>
                            <button id="update-username" data-user-id="<%= dataUser._id %>">Save</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" value="<%= dataUser.email %>" class="col-3" disabled>
                    </div>
                    <div class="form-group user-details">
                        <div class="input-group">
                            <label>Phone Number</label> 
                            <a href="#" class="ml-2 fs-6" id="phonenumber-edit" onclick="changeUsername('phonenumber-input','phonenumber-save','phonenumber-cancel')">Edit</a>
                            <a href="/userprofile" class="ml-3" id="phonenumber-cancel" style="display: none;">Cancel</a>
                        </div>
                        <div class="input-group">
                            <input type="text" class="col-3" id="phonenumber-input" value="<%= dataUser.phonenumber %>" disabled>
                            <button id="phonenumber-save" data-user-id="<%= dataUser._id %>">Save</button>
                        </div>
                    </div>

                    <div class="form-group user-address">
                        <div class="input-group address-label">
                            <label>Address</label>
                            <button>Add Address</button>
                        </div>

                        <div>
                            <div class="address-container">
                                <div class="address-card">
                                    <div class="address-details">
                                        <p><strong>Name:</strong> John Doe</p>
                                        <p><strong>Address:</strong> 123 Main Street</p>
                                        <p><strong>City:</strong> Anytown</p>
                                        <p><strong>State:</strong> CA</p>
                                        <p><strong>ZIP Code:</strong> 12345</p>
                                    </div>
                                    <a href="">Edit</a> &nbsp; | &nbsp;&nbsp
                                    <a href="">Delete</a>
                                </div>
                                <div class="address-card">
                                    <div class="address-details">
                                        <p><strong>Name:</strong> John Doe</p>
                                        <p><strong>Address:</strong> 123 Main Street</p>
                                        <p><strong>City:</strong> Anytown</p>
                                        <p><strong>State:</strong> CA</p>
                                        <p><strong>ZIP Code:</strong> 12345</p>
                                    </div>
                                    <a href="">Edit</a> &nbsp; | &nbsp;&nbsp
                                    <a href="">Delete</a>
                                </div>
                                <div class="address-card">
                                    <div class="address-details">
                                        <p><strong>Name:</strong> John Doe</p>
                                        <p><strong>Address:</strong> 123 Main Street</p>
                                        <p><strong>City:</strong> Anytown</p>
                                        <p><strong>State:</strong> CA</p>
                                        <p><strong>ZIP Code:</strong> 12345</p>
                                    </div>
                                    <a href="">Edit</a> &nbsp; | &nbsp;&nbsp
                                    <a href="">Delete</a>
                                </div>
                                
                            </div>
                            
                            
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>

    </div>


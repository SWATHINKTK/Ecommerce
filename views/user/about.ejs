<%- include('../partials/header.ejs') %>
    <%- include('../partials/navbar.ejs') %>

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <div class="breadcrumb__links">
                            <a href="<%= locals.login ? '/home' : '/'  %>">Home</a>
                            <span class="text-muted">About Us</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- About Section Begin -->
    <section class="about spad">
        <div class="container">
            <h2 class="mb-5 font-weight-bold text-center">About</h2>
            <div class="row">
                <div class="col-lg-12">
                    <div class="about__pic">
                        <img src="/public/user/img/about/about-us.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="about__item">
                        <h4>Who We Are ?</h4>
                        <p>Male Fashion isn't just an online men's fashion store — we're a community of style enthusiasts who see fashion as an art form and a powerful tool for self-expression. Our team is dedicated to curating high-quality, stylish products that cater to the diverse tastes of modern men.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="about__item">
                        <h4>Who We Do ?</h4>
                        <p>At Male Fashion, we cater to modern men who appreciate quality, style, and self-expression in their fashion choices. Our curated collection is designed to meet the diverse tastes and preferences of individuals seeking confidence and uniqueness in their wardrobe.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="about__item">
                        <h4>Why Choose Us</h4>
                        <p>Elevate your style effortlessly with Male Fashion. We offer curated, high-quality fashion that celebrates individuality. Choose us for a blend of trendsetting designs and a vibrant community of fashion-forward individuals.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- About Section End -->

    <!-- Testimonial Section Begin -->
    <section class="testimonial">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 p-0">
                    <div class="testimonial__text">
                        <span class="icon_quotations"></span>
                        <p>“'Male Fashion is my go-to for men's fashion. The curated collection is top-notch, and I love the attention to detail. The sizing info is spot-on, making shopping a breeze. Quality, style, and a great community – they've got it all!'
                            ”
                        </p>
                        <div class="testimonial__author">
                            <!-- <div class="testimonial__author__pic">
                                <img src="/public/user/img/about/quote.png" alt="">
                            </div> -->
                            <div class="testimonial__author__text">
                                <h5>– Anna Wintour</h5>
                                <p>Fashion Designer</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 p-0">
                    <div class="testimonial__pic set-bg" data-setbg="/public/user/img/about/testimonial-pic.jpg"></div>
                </div>
            </div>
        </div>
    </section>
    <!-- Testimonial Section End -->

    <!-- Counter Section Begin -->
    <section class="counter spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="counter__item">
                        <div class="counter__item__number">
                            <h2 class="cn_num"><%= userCount %></h2>
                        </div>
                        <span>Our <br />Clients</span>
                       
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="counter__item">
                        <div class="counter__item__number">
                            <h2 class="cn_num"><%= categoryCount %></h2>
                        </div>
                        <span>Total <br />Categories</span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="counter__item">
                        <div class="counter__item__number">
                            <h2 class="cn_num"><%= brandData[0].totalStatusTrue %></h2>
                        </div>
                        <span>Total <br />Brands</span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="counter__item">
                        <div class="counter__item__number">
                            <h2 class="cn_num">98</h2>
                            <strong>%</strong>
                        </div>
                        <span>Success <br />Deliverys</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Counter Section End -->

    <!-- Client Section Begin -->
    <section class="clients spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Partner</span>
                        <h2>Selling Brands</h2>
                    </div>
                </div>
            </div>
            <div class="d-flex mb-5">
            <% for(let i = 0; i < Math.min(4, brandData.length); i++) { %>
                <div class="col-3">
                    <img src="/public/admin/assets/brandImages/<%= brandData[i].brands.brand_logo %>" alt="" style="object-fit: contain; max-height: 80px; width: 100%;">
                </div>
            <% } %>
            </div> 
        </div>
    </section>
    <!-- Client Section End -->

<%- include('../partials/footer.ejs') %>
